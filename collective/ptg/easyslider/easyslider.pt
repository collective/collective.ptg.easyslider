<div id="slider" class="easyslider" >
    <tal:images tal:repeat="img view/adapter/cooked_images">
        <a href="" tal:define="number repeat/img/index;    tal:attributes="href img/link" >
            <div>
                <span class="image-title" tal:content="img/title">Title</span> 
                <p class="image-desc" tal:content="structure img/description">Description</p> 
            </div>
             <img title="Locomotives Roundhouse"
                    alt=""
                    src=""
                    tal:attributes="title img/title;
                                    alt img/description;
                                    src img/image_url" 
                    tal:condition="not: view/settings/easyslider_use_icons" />
            <img title="Locomotives Roundhouse"
                    alt=""
                    src=""
                    tal:attributes="title img/title;
                                    alt img/description;
                                    src img/thumb_url" 
                    tal:condition="view/settings/easyslider_use_icons" />

        </a>       
    </tal:images>    
</div>
